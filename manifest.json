{
  "manifest_version": 2,
  "name": "Desativar legenda",
  "version": "1.2",
  "description": "Desativa legendas autom√°ticas do Descomplica.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "48": "icons/closed-caption-disabled.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.descomplica.com.br/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/closed-caption-disabled.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "clicabotao@example.com",
      "strict_min_version": "42.0"
    }
  }
}